{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "FrontDoor RuleSet Associations",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "globalResource": "true",
                            "instanceDetailsLabel": "FrontDoor details",
                            "resourceGroup": {
                                "allowExisting": true
                            }
                        },
                        {
                            "name": "afdProfileSelector",
                            "type": "Microsoft.Solutions.ResourceSelector",
                            "label": "Select the Azure Front Door Profile:",
                            "resourceType": "Microsoft.Cdn/profiles",
                            "scope": {
                                "subscriptionId": "[steps('basics').resourceScope.subscription.subscriptionId]"
                            },
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "tbProfile",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "[steps('basics').afdProfileSelector.id]"
                            }
                        },
                        {
                            "name": "afdEndpoint",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfileSelector.id, '/afdEndpoints?api-version=2023-05-01')]"
                            }
                        },
                        {
                            "name": "afdEndpointSelector",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Endpoint",
                            "filter": true,
                            "constraints": {
                                "allowedValues": "[map(steps('basics').afdEndpoint.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "tbEndpoint",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "[steps('basics').afdEndpointSelector]"
                            }
                        },
                        {
                            "name": "afdRoutes",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdEndpointSelector, '/routes?api-version=2023-05-01')]",
                                "transforms": {
                                    "list": "value[].{ routeName: name, defaultId: id }"
                                }
                            }
                        },
                        {
                            "name": "debugRawRoutes",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "[concat(\n  'Found routes (name / defaultId): ', replace(string(steps('basics').afdRoutes.transformed.list), '},{', '}\\n{')\n)]"
                            }
                        },
                        {
                            "name": "routesGrid",
                            "type": "Microsoft.Common.EditableGrid",
                            "ariaLabel": "Routes configuration grid",
                            "label": "Configure each route",
                            "dataSource": "[steps('basics').afdRoutes.transformed.list]",
                            "constraints": {
                                "columns": [
                                    {
                                        "name": "routeName",
                                        "label": "Route",
                                        "field": "routeName",
                                        "type": "Microsoft.Common.TextBlock"
                                    },
                                    {
                                        "name": "modify",
                                        "label": "Modify RuleSet?",
                                        "field": "modify",
                                        "type": "Microsoft.Common.CheckBox"
                                    },
                                    {
                                        "name": "ruleset",
                                        "label": "RuleSet to apply",
                                        "field": "ruleset",
                                        "type": "Microsoft.Common.DropDown",
                                        "allowedValues": "[steps('basics').afdRuleSets.transformed.list]"
                                    }
                                ]
                            },
                            "defaultValue": "[steps('basics').afdRoutes.transformed.list | map(r => { routeName: r.routeName, modify: false, ruleset: last(split(r.defaultId, '/')) })]",
                            "visible": "[not(empty(steps('basics').afdRoutes.transformed.list))]"
                        },
                        
                        {
                            "name": "afdRuleSets",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfileSelector.id, '/ruleSets?api-version=2023-05-01')]",
                                "transforms": {
                                    "list": "[value|[*].{label:name, value:id},[{label: '---', value: '---'}]][]"
                                }
                            }
                        }
                    ]
                },
                {
                    "name": "associations",
                    "label": "Associations",
                    "elements": [
                        {
                            "name": "sectionAssociationType",
                            "type": "Microsoft.Common.Section",
                            "label": "Association Type",
                            "elements": [
                                {
                                    "name": "info",
                                    "type": "Microsoft.Common.InfoBox",
                                    "visible": true,
                                    "options": {
                                        "style": "Info",
                                        "text": "Choose the association type:<ol><li>Select a RuleSet and apply it to <b>all</b> routes, or:</li><li><b>For each route</b>, mark the checkbox if you want to change the current RuleSet (shown in each dropdown list) and choose a new one</li></ol>"
                                    }
                                },
                                {
                                    "name": "ogAssociationType",
                                    "type": "Microsoft.Common.OptionsGroup",
                                    "label": "Apply the same RuleSet to all routes or decide individually:",
                                    "defaultValue": "All",
                                    "toolTip": "",
                                    "constraints": {
                                        "allowedValues": [
                                            {
                                                "label": "All",
                                                "value": "All"
                                            },
                                            {
                                                "label": "Individually",
                                                "value": "Individually"
                                            }
                                        ],
                                        "required": true
                                    },
                                    "visible": true
                                },
                                {
                                    "name": "ddAllRuleset",
                                    "type": "Microsoft.Common.DropDown",
                                    "label": "RuleSet to associate to all the routes:",
                                    "subLabel": "",
                                    "filter": true,
                                    "filterPlaceholder": "Filter items ...",
                                    "constraints": {
                                        "required": false,
                                        "allowedValues": "[steps('basics').afdRuleSets.transformed.list]"
                                    },
                                    "infoMessages": [],
                                    "visible": "[equals(steps('associations').sectionAssociationType.ogAssociationType, 'All')]"
                                }
                            ]
                        },
                        {
                            "name": "wwwposteitSection",
                            "type": "Microsoft.Common.Section",
                            "label": "www.poste.it",
                            "visible": "[equals(steps('associations').sectionAssociationType.ogAssociationType, 'Individually')]",
                            "elements": [
                                {
                                    "name": "Route",
                                    "type": "Microsoft.Solutions.ArmApiControl",
                                    "request": {
                                        "method": "GET",
                                        "path": "[concat(steps('basics').afdEndpointSelector, '/routes/routing-www-poste-it?api-version=2023-05-01')]",
                                        "transforms": {
                                            "id": "properties.ruleSets[0].id",
                                            "originGroup": "properties.originGroup.id"
                                        }
                                    }
                                },
                                {
                                    "name": "OriginGroup",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Default Origin Group:",
                                        "link": {
                                            "label": "[last(split(steps('associations').wwwposteitSection.Route.transformed.originGroup,'/'))]",
                                            "uri": "[steps('associations').wwwposteitSection.Route.transformed.originGroup]"
                                        }
                                    }
                                },
                                {
                                    "name": "CurrentRuleSet",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": false,
                                    "options": {
                                        "text": "[if(empty(last(split(first(steps('associations').wwwposteitSection.Route.transformed.id),'/'))), '---', last(split(first(steps('associations').wwwposteitSection.Route.transformed.id),'/')))]"
                                    }
                                },
                                {
                                    "name": "wwwposteit-Checkbox",
                                    "type": "Microsoft.Common.CheckBox",
                                    "label": "Modify RuleSet:",
                                    "constraints": {
                                        "required": false
                                    }
                                },
                                {
                                    "name": "wwwposteit-ruleset",
                                    "type": "Microsoft.Common.DropDown",
                                    "label": "RuleSet to associate to the route:",
                                    "subLabel": "",
                                    "defaultValue": "[if(empty(last(split(steps('associations').wwwposteitSection.Route.transformed.id,'/'))), '---', last(split(steps('associations').wwwposteitSection.Route.transformed.id,'/')))]",
                                    "filter": true,
                                    "filterPlaceholder": "Filter items ...",
                                    "constraints": {
                                        "required": false,
                                        "allowedValues": "[steps('basics').afdRuleSets.transformed.list]"
                                    },
                                    "infoMessages": [],
                                    "visible": true
                                }
                            ]
                        },
                        {
                            "name": "postepayposteitSection",
                            "type": "Microsoft.Common.Section",
                            "label": "postepay.poste.it",
                            "visible": "[equals(steps('associations').sectionAssociationType.ogAssociationType, 'Individually')]",
                            "elements": [
                                {
                                    "name": "Route",
                                    "type": "Microsoft.Solutions.ArmApiControl",
                                    "request": {
                                        "method": "GET",
                                        "path": "[concat(steps('basics').afdEndpointSelector, '/routes/routing-postepay-poste-it?api-version=2023-05-01')]",
                                        "transforms": {
                                            "id": "properties.ruleSets[0].id",
                                            "originGroup": "properties.originGroup.id"
                                        }
                                    }
                                },
                                {
                                    "name": "OriginGroup",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Default Origin Group:",
                                        "link": {
                                            "label": "[last(split(steps('associations').postepayposteitSection.Route.transformed.originGroup,'/'))]",
                                            "uri": "[steps('associations').postepayposteitSection.Route.transformed.originGroup]"
                                        }
                                    }
                                },
                                {
                                    "name": "CurrentRuleSet",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": false,
                                    "options": {
                                        "text": "[if(empty(last(split(steps('associations').postepayposteitSection.Route.transformed.id,'/'))), '---', last(split(steps('associations').postepayposteitSection.Route.transformed.id,'/')))]"
                                    }
                                },
                                {
                                    "name": "postepayposteit-Checkbox",
                                    "type": "Microsoft.Common.CheckBox",
                                    "label": "Modify RuleSet:",
                                    "constraints": {
                                        "required": false
                                    }
                                },
                                {
                                    "name": "postepayposteit-ruleset",
                                    "type": "Microsoft.Common.DropDown",
                                    "label": "RuleSet to associate to the route:",
                                    "subLabel": "",
                                    "defaultValue": "[if(empty(last(split(steps('associations').postepayposteitSection.Route.transformed.id,'/'))), '---', last(split(steps('associations').postepayposteitSection.Route.transformed.id,'/')))]",
                                    "filter": true,
                                    "filterPlaceholder": "Filter items ...",
                                    "constraints": {
                                        "required": false,
                                        "allowedValues": "[steps('basics').afdRuleSets.transformed.list]"
                                    },
                                    "infoMessages": [],
                                    "visible": true
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "afd_profile_id": "[steps('basics').afdProfileSelector.id]",
                "afd_endpoint_id": "[steps('basics').afdEndpointSelector]",
                "associationType": "[steps('associations').sectionAssociationType.ogAssociationType]",
                "all_ruleset_id": "[steps('associations').sectionAssociationType.ddAllRuleset]",
                "wwwposteit-ruleset": "[steps('associations').wwwposteitSection.wwwposteit-ruleset]",
                "wwwposteit-modify": "[steps('associations').wwwposteitSection.wwwposteit-Checkbox]",
                "postepayposteit-ruleset": "[steps('associations').postepayposteitSection.postepayposteit-ruleset]",
                "postepayposteit-modify": "[steps('associations').postepayposteitSection.postepayposteit-Checkbox]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}