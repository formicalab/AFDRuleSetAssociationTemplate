{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Test Form View",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "globalResource": "true",
                            "instanceDetailsLabel": "FrontDoor details",
                            "resourceGroup": {
                                "allowExisting": true
                            }
                        },
                        {
                            "name": "afdProfileSelector",
                            "type": "Microsoft.Solutions.ResourceSelector",
                            "label": "Select the Azure Front Door Profile:",
                            "resourceType": "Microsoft.Cdn/profiles",
                            "scope": {
                                "subscriptionId": "[steps('basics').resourceScope.subscription.subscriptionId]"
                            }
                        },
                        {
                            "name": "afdEndpointGet",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfileSelector.id, '/afdEndpoints?api-version=2023-05-01')]"
                            }
                        },
                        {
                            "name": "afdEndpointList",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Endpoint",
                            "filter": true,
                            "constraints": {
                                "allowedValues": "[map(steps('basics').afdEndpointGet.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "afdRuleSetGet",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfileSelector.id, '/ruleSets?api-version=2023-05-01')]"
                            }
                        },
                        {
                            "name": "wwwposteit-routing-ruleset",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Wwwposteit-routing-ruleset",
                            "subLabel": "",
                            "toolTip": "The ruleset to apply to the route",
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "constraints": {
                                "required": false,
                                "allowedValues": "[map(steps('basics').afdRuleSetGet.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]"
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "postepayposteit-routing-ruleset",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Postepayposteit-routing-ruleset",
                            "subLabel": "",
                            "toolTip": "The ruleset to apply to the route",
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "constraints": {
                                "required": false,
                                "allowedValues": "[map(steps('basics').afdRuleSetGet.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]"
                            },
                            "infoMessages": [],
                            "visible": true
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "wwwposteit-routing-ruleset": "[steps('basics').wwwposteit-routing-ruleset]",
                "postepayposteit-routing-ruleset": "[steps('basics').postepayposteit-routing-ruleset]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }

    }
}