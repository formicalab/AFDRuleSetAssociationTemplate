{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "FrontDoor RuleSet Associations",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "introTextBlock",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": true,
                            "options": {
                                "icon": "Info",
                                "text": "[concat('Use this template to modify RuleSet associations for FrontDoor profile <b>',steps('basics').afdProfile.name, '</b>, endpoint <b>', steps('basics').afdEndpoint.name, '</b><p>Leave the following fields unchanged and confirm just the subscription and the resource group containing the FrontDoor profile:')]"
                            }
                        },
                        {
                            "name": "tbSubscriptionName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Subscription",
                            "defaultValue": "Flaz-2"
                        },
                        {
                            "name": "tbSubscriptionId",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Subscription ID",
                            "defaultValue": "c4e6c176-bf9c-4e8c-87b2-ebdceea7085f"
                        },
                        {
                            "name": "tbResourceGroup",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Resource Group",
                            "defaultValue": "rg-afd-itn-001"
                        },
                        {
                            "name": "tbAfdProfile",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Front Door Profile",
                            "defaultValue": "afd-itn-001"
                        },
                        {
                            "name": "tbAfdEndpoint",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Front Door Endpoint",
                            "defaultValue": "endpoint-apps"
                        },
                        {
                            "name": "afdProfile",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat('/subscriptions/', steps('basics').tbSubscriptionId, '/resourceGroups/', steps('basics').tbResourceGroup, '/providers/Microsoft.Cdn/profiles/', steps('basics').tbAfdProfile, '?api-version=2025-04-15')]"
                            }
                        },
                        {
                            "name": "afdEndpoint",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfile.id, '/afdEndpoints/', steps('basics').tbAfdEndpoint, '?api-version=2025-04-15')]"
                            }
                        },
                        {
                            "name": "afdRuleSets",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdProfile.id, '/ruleSets?api-version=2025-04-15')]",
                                "transforms": {
                                    "list": "[value|[*].{label:name, value:id},[{label: '---', value: '---'}]][]"
                                }
                            }
                        },
                        {
                            "name": "afdRoutes",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('basics').afdEndpoint.id, '/routes?api-version=2025-04-15')]",
                                "transforms": {
                                    "routeList": "[value|[*].{label:name, value:id, description: properties.ruleSets[0].id}][]",
                                    "originGroups": "[value|[*].properties.originGroup.id][]",
                                    "customDomains": "[value|[*].properties.customDomains][]",
                                    "patterns": "[value|[*].properties.patternsToMatch][]",
                                    "protocols": "[value|[*].properties.supportedProtocols][]",
                                    "httpsRedirect": "[value|[*].properties.httpsRedirect][]",
                                    "forwardingProtocol": "[value|[*].properties.forwardingProtocol][]",
                                    "enabledState": "[value|[*].properties.enabledState][]",
                                    "cacheConfiguration": "[value|[*].properties.cacheConfiguration][]",
                                    "routeIds": "[value|[*].id][]"
                                }
                            }
                        },
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "instanceDetailsLabel": "Specify the same subscription and resource group as the Front Door profile",
                            "globalResource": "true",
                            "subscription": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[equals(steps('basics').resourceScope.subscription.subscriptionId,  steps('basics').tbSubscriptionId)]",
                                            "message": "[concat('Use subscription ',  steps('basics').tbSubscriptionName)]"
                                        }
                                    ]
                                }
                            },
                            "resourceGroup": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[equals(steps('basics').resourceScope.resourceGroup.name,  steps('basics').tbResourceGroup)]",
                                            "message": "[concat('Use resource group ',  steps('basics').tbResourceGroup)]"
                                        }
                                    ]
                                },
                                "allowExisting": true
                            }
                        }
                    ]
                },
                {
                    "name": "associations",
                    "label": "Associations",
                    "elements": [
                        {
                            "name": "ddRuleset",
                            "type": "Microsoft.Common.DropDown",
                            "label": "RuleSet to associate:",
                            "subLabel": "This ruleset will be associated to all the selected routes",
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "constraints": {
                                "required": true,
                                "allowedValues": "[steps('basics').afdRuleSets.transformed.list]"
                            },
                            "infoMessages": []
                        },
                        {
                            "name": "selectedRoutes",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Select Routes to Associate RuleSets",
                            "multiselect": true,
                            "selectAll": true,
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "multiLine": true,
                            "constraints": {
                                "allowedValues": "[steps('basics').afdRoutes.transformed.routeList]",
                                "required": true
                            },
                            "visible": true
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "afd_profile_id": "[steps('basics').afdProfile.id]",
                "afd_endpoint_id": "[steps('basics').afdEndpoint.id]",
                "selected_ruleset_id": "[steps('associations').ddRuleset]",
                "selected_routes": "[steps('associations').selectedRoutes]",
                "route_originGroups": "[steps('basics').afdRoutes.transformed.originGroups]",
                "route_customDomains": "[steps('basics').afdRoutes.transformed.customDomains]",
                "route_patterns": "[steps('basics').afdRoutes.transformed.patterns]",
                "route_protocols": "[steps('basics').afdRoutes.transformed.protocols]",
                "route_httpsRedirect": "[steps('basics').afdRoutes.transformed.httpsRedirect]",
                "route_forwardingProto": "[steps('basics').afdRoutes.transformed.forwardingProtocol]",
                "route_enabledState": "[steps('basics').afdRoutes.transformed.enabledState]",
                "route_cacheConfig": "[steps('basics').afdRoutes.transformed.cacheConfiguration]",
                "all_route_ids": "[steps('basics').afdRoutes.transformed.routeIds]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}