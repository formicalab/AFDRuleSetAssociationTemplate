{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "afd_profile_id": {
            "type": "string",
            "metadata": {
                "description": "The ID of the Azure Front Door profile"
            }
        },
        "afd_endpoint_id": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Front Door endpoint"
            }
        },
        "associationType": {
            "type": "string",
            "defaultValue": "All",
            "metadata": {
                "description": "The type of association",
                "allowedValues": [
                    "All",
                    "Individually"
                ]
            }
        },
        "all-ruleset": {
            "type": "string",
            "defaultValue": "---",
            "metadata": {
                "description": "The ruleset to apply to all routes if associationType is All"
            }
        },
        "wwwposteit-modify": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "True to modify the route, false to ignore it"
            }
        },
        "wwwposteit-ruleset": {
            "type": "string",
            "defaultValue": "---",
            "metadata": {
                "description": "The ruleset to apply to the route"
            }
        },
        "postepayposteit-modify": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "True to modify the route, false to ignore it"
            }
        },
        "postepayposteit-ruleset": {
            "type": "string",
            "defaultValue": "---",
            "metadata": {
                "description": "The ruleset to apply to the route"
            }
        }
    },
    "variables": {
        "afd_profile_name": "[last(split(parameters('afd_profile_id'), '/'))]",
        "afd_endpoint_name": "[last(split(parameters('afd_endpoint_id'), '/'))]",
        "wwwposteit-domain": "[concat(parameters('afd_profile_id'), '/customDomains/domain-www-poste-it')]",
        "wwwposteit-route": "[concat(variables('afd_profile_name'), '/', variables('afd_endpoint_name'), '/routing-www-poste-it')]",
        "wwwposteit-origingroup": "[concat(parameters('afd_profile_id'), '/originGroups/origingroup-www-poste-it-AZ')]",
        "postepayposteit-domain": "[concat(parameters('afd_profile_id'), '/customDomains/domain-postepay-poste-it')]",
        "postepayposteit-route": "[concat(variables('afd_profile_name'), '/', variables('afd_endpoint_name'), '/routing-postepay-poste-it')]",
        "postepayposteit-origingroup": "[concat(parameters('afd_profile_id'), '/originGroups/origingroup-postepay-poste-it-AZ')]"
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints",
            "apiVersion": "2024-02-01",
            "name": "[concat(variables('afd_profile_name'), '/', variables('afd_endpoint_name'))]",
            "location": "global"
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2024-02-01",
            "name": "[variables('wwwposteit-route')]",
            "dependsOn": [
                "[parameters('afd_endpoint_id')]"
            ],
            "condition": "[or(equals(parameters('associationType'), 'All'), parameters('wwwposteit-modify'))]",
            "properties": {
                "customDomains": [
                    {
                        "id": "[variables('wwwposteit-domain')]"
                    }
                ],
                "originGroup": {
                    "id": "[variables('wwwposteit-origingroup')]"
                },
                "ruleSets": "[if(equals(parameters('associationType'), 'All'), if(equals(parameters('all-ruleset'), '---'), json('[]'), array(createObject('id', parameters('all-ruleset')))), if(equals(parameters('wwwposteit-ruleset'), '---'), json('[]'), array(createObject('id', parameters('wwwposteit-ruleset')))))]"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2024-02-01",
            "name": "[variables('postepayposteit-route')]",
            "dependsOn": [
                "[parameters('afd_endpoint_id')]"
            ],
            "condition": "[or(equals(parameters('associationType'), 'All'), parameters('postepayposteit-modify'))]",
            "properties": {
                "customDomains": [
                    {
                        "id": "[variables('postepayposteit-domain')]"
                    }
                ],
                "originGroup": {
                    "id": "[variables('postepayposteit-origingroup')]"
                },
                "ruleSets": "[if(equals(parameters('associationType'), 'All'), if(equals(parameters('all-ruleset'), '---'), json('[]'), array(createObject('id', parameters('all-ruleset')))), if(equals(parameters('postepayposteit-ruleset'), '---'), json('[]'), array(createObject('id', parameters('postepayposteit-ruleset')))))]"
            }
        }
    ]
}